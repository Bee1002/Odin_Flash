<UserControl x:Class="Odin_Flash.Controls.Flash"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Odin_Flash.Controls"
             mc:Ignorable="d" 
             d:DesignWidth="500">
    <Grid >
        <Grid >
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <StackPanel x:Name="Features" Orientation="Vertical">
                <Grid x:Name="Pit">
                    <Grid.ColumnDefinitions >
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox 
                            Grid.Column="0"
                            Text=""
                            IsReadOnly="True"
                            VerticalAlignment="Top"
                            Margin="4"
                            AcceptsReturn="False"
                            Name="TxtBxPit"
                            TextChanged="TxtBxPit_TextChanged" />
                    <Button x:Name="BtnClearPit"
                                Click="BtnClearPit_Click"
                                Margin="4" Grid.Column="1" Content="Clear" />
                    <Button
                            x:Name="BtnChoosePit"
                            Click="BtnChoosePit_Click"
                            Margin="4" Grid.Column="2" Content="Browse" />
                </Grid>
            </StackPanel>
            <WrapPanel Orientation="Horizontal"
                            Grid.Row="1">


                <CheckBox Content="Auto reboot"
                              Name="AutoBoot"
                              Margin="5"
                              IsChecked="True" />
                <CheckBox Name="RepartitionCheckBx"
                              Content="Repartition"
                              Margin="5"
                              IsChecked="False"/>
                <CheckBox Content="Update boot"
                              x:Name="BootUpdate"
                              Margin="5"/>
                <CheckBox Content="Clear EFS"
                              x:Name="EfsClear"
                              Margin="5"/>

            </WrapPanel>
            <Grid
                            Grid.Row="2">
                <Grid.ColumnDefinitions >
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <Button Margin="5" Grid.Column="0" Name="BtnFlash" Click="BtnFlash_Click" Content="Flash"/>
                <Button Margin="5"
                            Grid.Column="1"
                            Name="BtnDetect"
                            Click="OnDetectButtonClick"
                            Content="Detect" />
                <Button Margin="5"
                            Grid.Column="2"
                            Name="BtnReadPit"
                            Click="BtnReadPit_Click"
                            Content="Read PIT" />
            </Grid>
        </Grid>
    </Grid>
</UserControl>
