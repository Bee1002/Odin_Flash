<UserControl x:Class="Odin_Flash.Controls.FlashField"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Odin_Flash.Controls"
             mc:Ignorable="d" >
    <Grid>
        <Grid.ColumnDefinitions >
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <ComboBox SelectionChanged="CmbBxListFile_SelectionChanged"
                     
                  Name="CmbBxListFile"
                  SelectedValue="{Binding FilePath}" 
                  Margin="4" >
                <ComboBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel IsVirtualizing="True" VirtualizationMode="Recycling"></VirtualizingStackPanel>
                    </ItemsPanelTemplate>
                </ComboBox.ItemsPanel>
                <ComboBox.ItemTemplate>
                    <DataTemplate >
                        <CheckBox IsChecked="{Binding Enable}"
                                      Content="{Binding FileName}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>

            </ComboBox>
            <TextBlock Foreground="Gray" IsHitTestVisible="False" Margin="8,5,20,0" Name="txtSelectTeam" VerticalAlignment="Center" ></TextBlock>
        </Grid>


        <Button x:Name="BtnClear"
                Click="BtnClear_Click" 
                Margin="4" Grid.Column="1" Content="Clear"/>
        <Button
                x:Name="BtnChooseFile"
                Click="BtnChooseFile_Click"
                Margin="4" Grid.Column="2" Content="Browse" />
    </Grid>
</UserControl>
